<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>E-Cart</title>
    <link rel="stylesheet" href="styles/Cart.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.2.0/css/all.css"
    />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.2.0/css/fontawesome.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <nav>
      <div class="name flex">
        <h1>ElectraSonic</h1>
      </div>
    </nav>

    <% if(locals.items){ %>
    <div class="container">
      <% items.forEach(item => { %>
      <div class="col-md-3 py-3 py-md-0">
        <div class="card" style="background-color: antiquewhite">
          <img src="images/Mobile/<%= item.image %>" alt="<%= item.image %>" />
          <div class="card-body">
            <h3 class="text-center"><%= item.name %></h3>
            <div class="star text-center">
              <p><%= item.rating %></p>
              <i class="fas fa-star checked"></i>
            </div>
            <div class="price flex">
              <i class="fas fa-rupee-sign"></i>
              <h2><%= item.price %></h2>
            </div>
            <form action="/delete_item" method="post">
              <input type="hidden" name="choice" value="<%= item.item_id %>" />
              <button type="submit">Remove</button>
            </form>
            <form action="/details" method="post">
              <button type="submit" class="more" value="<%= item.item_id %>" name="detail">Details</button>
            </form>
          </div>
        </div>
      </div>
      <% }); %>
    </div>

    <div class="bts flex">
      <a href="/"><button>Home Page</button></a>
      <a href="/payment"><button>Payment</button></a>
    </div>
    <% }else{ %>
    <div class="empty flex">
      <img src="images/Cart.png" alt="" />
      <h2>No Items Here</h2>
    </div>
    <% } %>
  </body>
</html>
