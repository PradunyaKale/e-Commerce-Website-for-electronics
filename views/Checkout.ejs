            />
          </div>
          <div class="form-group">
            <label for="phone">Phone*</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              value="<%= phone %>"
              required
            />
          </div>
          <div class="form-group">
            <label for="email">Email Address*</label>
            <input
              type="email"
              id="email"
              name="email"
              value="<%= email %>"
              required
            />
          </div>
          <% }else{ %>
          <div class="form-group">
            <label for="firstName">First Name*</label>
            <input
              type="text"
              id="firstName"
              name="firstName"
              value=""
              required
            />
          </div>
          <div class="form-group">
