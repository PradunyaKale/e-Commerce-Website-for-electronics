    />
  </head>
  <body>
    <nav>
      <div class="name">
        <h1>ElectraSonic</h1>
      </div>
    </nav>

    <div class="box">
      <!-- Checkout Form -->
      <div class="checkout-form">
        <h2>Checkout</h2>
        <form action="/address" method="post">
          <% if(locals.fname){ %>

          <div class="form-group">
            <label for="firstName">First Name*</label>
            <input
              type="text"
              id="firstName"
              name="firstName"
              value="<%= fname %>"
              required
            />
          </div>
          <div class="form-group">
            <label for="lastName">Last Name*</label>
            <input
              type="text"
              id="lastName"
              name="lastName"
              value="<%= lname %>"
              required
            />
          </div>
          <div class="form-group">
            <label for="country">Country/Region*</label>
            <select id="country" required>
              <option value="India">India</option>
            </select>
          </div>
          <div class="form-group">
            <label for="address">House number and street name*</label>
            <input
              type="text"
              id="address"
              name="address"
              value="<%= address %>"
              required
            />
          </div>
          <div class="form-group">
            <label for="apartment"
